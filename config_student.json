{
    "name": "JITNet",
    "n_gpu": 1,
    "use_synch_bn": false,

    "arch": {
        "type": "JITNet",
        "args": {
            "freeze_bn": false
        }
    },

    "train_loader": {
        "type": "CLASSROOM",
        "args":{
            "partition": "ClassroomStuff",
            "data_dir": "/home/cs348k/data/student/",
            "batch_size": 8,
            "base_size": 768,
            "crop_size": 768,
            "augment": true,
            "shuffle": true,
            "scale": true,
            "flip": true,
            "rotate": true,
            "blur": false,
            "split": "train",
            "num_workers": 8
        }
    },

    "val_loader": {
        "type": "CLASSROOM",
        "args":{
            "partition": "ClassroomStuff",
            "data_dir": "/home/cs348k/data/student/",
            "batch_size": 8,
            "crop_size": 768,
            "val": true,
            "split": "val",
            "num_workers": 4
        }
    },

    "optimizer": {
        "type": "Adam",
        "differential_lr": false,
        "args":{
            "lr": 0.1,
            "weight_decay": 1e-4,
            "eps": 1.0
        }
    },

    "loss": "CrossEntropyLoss2d",
    "ignore_index": 255,
    "lr_scheduler": {
        "type": "Poly",
        "args": {
        }
    },

    "trainer": {
        "epochs": 3,
        "save_dir": "/home/cs348k/data/student/weights",
        "save_period": 1,

        "monitor": "off",
        "early_stop": 2,

        "tensorboard": false,
        "log_dir": "saved/runs",
        "log_per_iter": 0,

        "val": false,
        "val_per_epochs": 1
    }
}
