{
    "name": "JITNet",
    "n_gpu": 4,
    "use_synch_bn": true,

    "arch": {
        "type": "JITNet",
        "args": {
            "freeze_bn": false
        }
    },

    "train_loader": {
        "type": "COCO",
        "args":{
            "partition": "CocoStuff164k",
            "data_dir": "/home/cfan/coco2017/",
            "batch_size": 24,
            "base_size": 480,
            "crop_size": 480,
            "augment": true,
            "shuffle": true,
            "scale": true,
            "flip": true,
            "rotate": true,
            "blur": false,
            "split": "train2017",
            "num_workers": 8
        }
    },

    "val_loader": {
        "type": "COCO",
        "args":{
            "partition": "CocoStuff164k",
            "data_dir": "/home/cfan/coco2017",
            "batch_size": 8,
            "crop_size": 480,
            "val": true,
            "split": "val2017",
            "num_workers": 4
        }
    },

    "optimizer": {
        "type": "SGD",
        "differential_lr": false,
        "args":{
            "lr": 0.01,
            "weight_decay": 1e-4,
            "momentum": 0.9
        }
    },

    "loss": "CrossEntropyLoss2d",
    "ignore_index": 255,
    "reduction": "none",
    "lr_scheduler": {
        "type": "Poly",
        "args": {}
    },

    "trainer": {
        "epochs": 30,
        "save_dir": "saved/",
        "save_period": 1,

        "monitor": "max Mean_IoU",
        "early_stop": 10,

        "tensorboard": true,
        "log_dir": "saved/runs",
        "log_per_iter": 20,

        "val": true,
        "val_per_epochs": 1
    }
}
